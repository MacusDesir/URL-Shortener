<h1>Urls</h1>

<table>
  <tr>
    <th>Long URL</th>
    <th>Shortened URL</th>
    <th>URL ID</th>
    <th colspan="3"></th>
  </tr>
 
  <% Url.all.each do |url| %>
    <tr>
      <td><%= url.long %></td>
      <td><%= url.short %></td>
      <td><%= url.id %></td>
      <td><%= link_to 'show', url %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New url', new_url_path %>